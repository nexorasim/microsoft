{
  "name": "nexorasim-enterprise-portal",
  "version": "1.0.0",
  "description": "Enterprise-grade eSIM lifecycle management platform with comprehensive security, multi-carrier support, and advanced administrative controls",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=index.html --cors --no-browser",
    "build": "npm run minify && npm run optimize",
    "minify": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss styles/enterprise.css -o styles/enterprise.min.css",
    "minify-js": "terser scripts/security.js scripts/auth.js scripts/portal.js scripts/api.js -o scripts/bundle.min.js --compress --mangle",
    "optimize": "npm run optimize-images && npm run generate-manifest",
    "optimize-images": "imagemin assets/**/*.{jpg,png,svg} --out-dir=assets/optimized/",
    "generate-manifest": "node scripts/generate-manifest.js",
    "test": "jest --coverage",
    "test:security": "npm audit && npm run test:xss && npm run test:csrf",
    "test:xss": "node scripts/security-tests/xss-test.js",
    "test:csrf": "node scripts/security-tests/csrf-test.js",
    "lint": "eslint scripts/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,css,html,json}\"",
    "validate": "npm run lint && npm run test:security && npm run build",
    "deploy": "npm run validate && npm run deploy:production",
    "deploy:production": "node scripts/deploy.js",
    "start": "npm run dev",
    "clean": "rimraf dist/ && rimraf styles/*.min.css && rimraf scripts/*.min.js"
  },
  "keywords": [
    "esim",
    "enterprise",
    "management",
    "security",
    "myanmar",
    "mpt",
    "atom",
    "mytel",
    "u9",
    "carrier",
    "device-enrollment",
    "apple-business-manager",
    "android-enterprise",
    "audit-logging",
    "role-based-access"
  ],
  "author": {
    "name": "NexoraSIM Enterprise",
    "email": "enterprise@nexorasim.com",
    "url": "https://nexorasim.com"
  },
  "license": "Proprietary",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/nexorasim/microsoft.git"
  },
  "bugs": {
    "url": "https://github.com/nexorasim/microsoft/issues",
    "email": "support@nexorasim.com"
  },
  "homepage": "https://nexorasim.com",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "qrcode": "^1.5.3",
    "chart.js": "^4.4.0",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "clean-css-cli": "^5.6.2",
    "terser": "^5.24.0",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "@types/jest": "^29.5.8"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "security": {
    "csp": {
      "default-src": "'self'",
      "script-src": "'self' 'unsafe-inline'",
      "style-src": "'self' 'unsafe-inline' https://fonts.googleapis.com",
      "font-src": "'self' https://fonts.gstatic.com",
      "img-src": "'self' data:",
      "connect-src": "'self'",
      "frame-ancestors": "'none'",
      "base-uri": "'self'",
      "form-action": "'self'"
    },
    "headers": {
      "Strict-Transport-Security": "max-age=31536000; includeSubDomains; preload",
      "X-Frame-Options": "DENY",
      "X-Content-Type-Options": "nosniff",
      "Referrer-Policy": "strict-origin-when-cross-origin",
      "Permissions-Policy": "geolocation=(), microphone=(), camera=()"
    }
  },
  "performance": {
    "budgets": [
      {
        "type": "initial",
        "maximumWarning": "500kb",
        "maximumError": "1mb"
      },
      {
        "type": "anyComponentStyle",
        "maximumWarning": "50kb",
        "maximumError": "100kb"
      }
    ]
  },
  "accessibility": {
    "wcag": "AA",
    "standards": [
      "WCAG 2.1",
      "Section 508",
      "EN 301 549"
    ]
  },
  "seo": {
    "title": "NexoraSIM Enterprise Portal - Secure eSIM Management",
    "description": "Enterprise-grade eSIM lifecycle management platform with multi-carrier support, device enrollment, and comprehensive security controls.",
    "keywords": "eSIM, enterprise, management, security, MPT, ATOM, MYTEL, U9, Myanmar",
    "author": "NexoraSIM Enterprise",
    "robots": "noindex, nofollow",
    "canonical": "https://nexorasim.com"
  },
  "monitoring": {
    "analytics": {
      "google": false,
      "internal": true
    },
    "performance": {
      "lighthouse": true,
      "webvitals": true
    },
    "security": {
      "csp-reporting": true,
      "audit-logging": true
    }
  },
  "deployment": {
    "environments": {
      "development": {
        "url": "http://localhost:3000",
        "debug": true
      },
      "staging": {
        "url": "https://staging.nexorasim.com",
        "debug": false
      },
      "production": {
        "url": "https://nexorasim.com",
        "debug": false
      }
    },
    "cdn": {
      "enabled": true,
      "provider": "cloudflare",
      "caching": true
    },
    "ssl": {
      "enabled": true,
      "hsts": true,
      "redirect": true
    }
  }
}